{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "target": "portfolio",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": {
          "functionId": "chat",
          "region": "us-central1"
        }
      },
      {
        "source": "/a2ui-agent/**",
        "function": {
          "functionId": "chat",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
